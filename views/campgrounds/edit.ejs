<%- include("../partials/header") -%>

<main role="main" class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12">
      <h1 class="text-center">Edit: <%= campground.name %></h1>
    </div>
    <div class="col-lg-6 col-md-8 col-sm-10 mt-2">
      
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="campground[name]" autofocus value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <label for="image">Image URL</label>
          <input type="text" class="form-control" id="image" name="campground[image]" value="<%= campground.image %>">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <input type="text" class="form-control" id="description" name="campground[description]" value="<%= campground.description %>">
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-3">Update!</button>
      </form>
      
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</main>

<%- include("../partials/footer") -%>
