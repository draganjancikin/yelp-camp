<%- include("../partials/header") -%>

<main role="main" class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12">
      <h1 class="text-center">Edit Comment</h1>
    </div>
    <div class="col-lg-6 col-md-8 col-sm-10 mt-2">
      
      <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name">Text</label>
          <input type="text" class="form-control" id="text" name="comment[text]" autofocus value="<%= comment.text %>">
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-3">Submit!</button>
      </form>
      
      <a href="/campgrounds/<%= campground_id %>">Go Back</a>
    </div>
  </div>
</main>

<%- include("../partials/footer") -%>
