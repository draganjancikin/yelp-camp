<%- include("../partials/header") -%>

<main role="main" class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12">
      <h1 class="text-center">Add New Comment to <%= campground.name %></h1>
    </div>
    <div class="col-lg-6 col-md-8 col-sm-10 mt-2">
      
      <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
          <label for="name">Text</label>
          <input type="text" class="form-control" id="text" name="comment[text]" autofocus>
        </div>
        <div class="form-group">
          <label for="image">Author</label>
          <input type="text" class="form-control" id="author" name="comment[author]">
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-3">Submit!</button>
      </form>
      
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</main>

<%- include("../partials/footer") -%>
