<%- include("partials/header") -%>

<main role="main" class="container">

  <header class="jumbotron">
    <h1 class="display-4">Welcome to YelpCamp!</h1>
    <p class="lead">View our hand-picked campgrounds from all over the word</p>
    <hr class="my-4">
    <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add New Campground</a>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our Most Popular Campground!</h3>
    </div>
  </div>

  <div class="row">

    <% campgrounds.forEach((campground) => { %>

      <div class="col-lg-3 col-md-4 col-sm-6">
        <div class="card mb-4 shadow-sm">
          <img src="<%= campground.image %>" alt="Image of Campground" class="card-img-top">
          <div class="card-body">
            <h5 class="card-title text-center">
              <%= campground.name %>
            </h5>
          </div>
          <p>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
          </p>
        </div>
      </div>

    <% }); %>

  </div>
  
</main>

<%- include("partials/footer") -%>
